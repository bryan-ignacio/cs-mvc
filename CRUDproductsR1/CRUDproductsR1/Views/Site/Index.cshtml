@model IEnumerable<CRUDproductsR1.Models.Product>

@{
    ViewData["Title"] = "Page";
}

<div class="text-center">
    <h3>Listado de Productos</h3>
</div>

<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Crear" asp-controller="Site" class="btn btn-success d-block mx-auto btn-lg">
            <i class="fa-solid fa-plus"></i> Agregar Producto
        </a>
    </div>
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Subir" asp-controller="Site" class="btn btn-warning d-block mx-auto btn-lg">
            <i class="fa-solid fa-file"></i> Subir SVG
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header bg-black text-white">
        <h4>Información</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive mt-4">
            @if (Model.Count() > 0)
            {
                <table class="table table-rounded table-bordered table-hover table-responsive " width="100%">
                    <thead class="table-info border-0">
                        <tr>
                            <th class="text-center">@Html.DisplayNameFor(m => m.Id)</th>
                            <th class="text-center">@Html.DisplayNameFor(m => m.Codigo)</th>
                            <th class="text-center">@Html.DisplayNameFor(m => m.Nombre)</th>
                            <th class="text-center">@Html.DisplayNameFor(m => m.PrecioUnitario)</th>
                            <th class="text-center">@Html.DisplayNameFor(m => m.PrecioFardo)</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Product product in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => product.Id)</td>
                                <td>@Html.DisplayFor(m => product.Codigo)</td>
                                <td>@Html.DisplayFor(m => product.Nombre)</td>
                                <td>Q. @Html.DisplayFor(m => product.PrecioUnitario)</td>
                                <td>Q. @Html.DisplayFor(m => product.PrecioFardo)</td>
                                <td>
                                    <div class="d-flex justify-content-center">
                                        <a asp-controller="Site" asp-action="Editar" asp-route-id="@product.Id" type="button"
                                            class="btn btn-warning mx-2">
                                            <i class="fa-solid fa-pen"></i> Editar</a>
                                        <a asp-controller="Site" asp-action="Info" asp-route-id="@product.Id" type="button"
                                            class="btn btn-info mx-2">
                                            <i class="fa-solid fa-circle-info"></i> Información</a>
                                        <a asp-controller="Site" asp-action="Borrar" asp-route-id="@product.Id" type="button"
                                            class="btn btn-danger mx-2">
                                            <i class="fa-solid fa-trash"></i> Borrar</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div>
                    <h3 class="text-danger">No hay productos :(</h3>
                </div>
            }
        </div>
    </div>
</div>