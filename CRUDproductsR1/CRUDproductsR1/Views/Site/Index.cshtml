@model IEnumerable<CRUDproductsR1.Models.Product>

@{
    ViewData["Title"] = "Page";
}

<div class="text-center">
    <h3>Listado de Productos</h3>
</div>

<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Crear" asp-controller="Site" class="btn btn-success d-block mx-auto btn-lg">
            <i class="fa-solid fa-plus"></i> Agregar Producto
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header bg-black text-white">
        <h4>Información</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive mt-4">
            @if (Model.Count() > 0)
            {
                <table class="table table-rounded table-bordered table-hover table-responsive " width="100%">
                    <thead class="table-info border-0">

                        <tr>
                            <th class="text-center">@Html.DisplayNameFor(m => m.Id)</th>
                            <th class="text-center">@Html.DisplayNameFor(m => m.Codigo)</th>
                            <th class="text-center">@Html.DisplayNameFor(m => m.Nombre)</th>
                            <th class="text-center">@Html.DisplayNameFor(m => m.PrecioUnitario)</th>
                            <th class="text-center">@Html.DisplayNameFor(m => m.PrecioFardo)</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>CF001</td>
                            <td>Café la Jarrillita</td>
                            <td>10</td>
                            <td>1200</td>
                            <td>
                                <div class="d-flex justify-content-center">
                                    <button type="button" class="btn btn-warning mx-2">Editar</button>
                                    <button type="button" class="btn btn-info mx-2">Información</button>
                                    <button type="button" class="btn btn-danger mx-2">Borrar</button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>JG002</td>
                            <td>Jugo del Frutal</td>
                            <td>5</td>
                            <td>120</td>
                            <td>
                                <div class="d-flex justify-content-center">
                                    <button type="button" class="btn btn-warning mx-2">Editar</button>
                                    <button type="button" class="btn btn-info mx-2">Información</button>
                                    <button type="button" class="btn btn-danger mx-2">Borrar</button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            }
            else
            {
                <div>
                    <h3>No hay productos :(</h3>
                </div>
            }

        </div>
    </div>
</div>