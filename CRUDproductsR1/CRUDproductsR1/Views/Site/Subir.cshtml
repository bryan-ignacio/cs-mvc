@{
    ViewData["Title"] = "Subir Productos";
}

<div class="row">
    <div class="card">
        <div class="card-header">
            <h4>Subir Productos (Carga Masiva) </h4>
        </div>
        <div class="card-body">
            <form asp-action="Subir" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="archivo">Seleccione archivo CSV</label>
                    <input type="file" class="form-control" name="archivo" required />
                </div>
                <button type="submit" class="btn btn-primary d-block mx-auto mt-4">
                    <i class="fa-regular fa-file"></i> Subir</button>
            </form>
        </div>
    </div>
</div>
<div>
    <a class="btn btn-secondary mt-4" asp-controller="Site" asp-action="Index">
        <i class="fa-solid fa-circle-left"></i> Regresar</a>
</div>