@model IEnumerable<CRUDproductsR1.Models.Product>

@{
    ViewData["Title"] = "Listado";
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="text-center">
    <h3>Listado de Productos</h3>
</div>

<div class="row mt-4 justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="input-group">
            <form asp-controller="Site" asp-action="Buscar" method="get">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Codigo Producto..." name="codigo" />
                    <button class="btn btn-primary" type="submit">Buscar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header bg-black text-white">
        <h4>Información</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive mt-4">
            @if (Model.Count() > 0)
            {
                <table class="table table-rounded table-bordered table-hover table-responsive " width="100%">
                    <thead class="table-info border-0">
                        <tr>
                            <th class="text-center">@Html.DisplayNameFor(m => m.Id)</th>
                            <th class="text-center">@Html.DisplayNameFor(m => m.Codigo)</th>
                            <th class="text-center">@Html.DisplayNameFor(m => m.Nombre)</th>
                            <th class="text-center">@Html.DisplayNameFor(m => m.PrecioUnitario)</th>
                            <th class="text-center">@Html.DisplayNameFor(m => m.PrecioFardo)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Product product in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => product.Id)</td>
                                <td>@Html.DisplayFor(m => product.Codigo)</td>
                                <td>@Html.DisplayFor(m => product.Nombre)</td>
                                <td>Q. @Html.DisplayFor(m => product.PrecioUnitario)</td>
                                <td>Q. @Html.DisplayFor(m => product.PrecioFardo)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div>
                    <h3 class="text-danger">No hay productos :(</h3>
                </div>
            }
        </div>
    </div>
</div>