@* Accedemos al modelo. *@
@model IEnumerable<CustomerCRUD.Models.Customer>
@{
    ViewData["Title"] = "Customers";
}

<div class="text-center">
    <h1 class="display-4 mt-4">Detalles De Clientes</h1>
</div>

<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Crear" asp-controller="Index" class="btn btn-primary d-block mx-auto btn-lg">
            <i class="fa-solid fa-plus"></i> Nuevo Usuario
        </a>
    </div>
</div>


<div class="row">
    <div class="card">
        <div class="table-responsive mt-4">
            @if (Model.Count() > 0)
            {
                <table class="table table-hover" width="100%" id="tblCustomers">
                    <thead class="table-dark mt-4">
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.Id)</th>
                            <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                            <th>@Html.DisplayNameFor(m => m.Apellido)</th>
                            <th>@Html.DisplayNameFor(m => m.Nit)</th>
                            <th>@Html.DisplayNameFor(m => m.Email)</th>
                            <th>@Html.DisplayNameFor(m => m.Telefono)</th>
                            <th>@Html.DisplayNameFor(m => m.Direccion)</th>
                            <th>@Html.DisplayNameFor(m => m.FechaCreacion)</th>
                            <th>
                                Acciones
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => item.Id)</td>
                                <td>@Html.DisplayFor(m => item.Nombre)</td>
                                <td>@Html.DisplayFor(m => item.Apellido)</td>
                                <td>@Html.DisplayFor(m => item.Nit)</td>
                                <td>@Html.DisplayFor(m => item.Email)</td>
                                <td>@Html.DisplayFor(m => item.Telefono)</td>
                                <td>@Html.DisplayFor(m => item.Direccion)</td>
                                <td>@Html.DisplayFor(m => item.FechaCreacion)</td>
                                <td>
                                    <a class="btn btn-warning" asp-action="Editar" asp-route-id="@item.Id"><i
                                            class="fa-solid fa-pen-to-square"></i> Editar</a>
                                    <a class="btn btn-secondary" asp-action="Detalle" asp-route-id="@item.Id">
                                        <i class="fa-solid fa-circle-info"></i> Detalle</a>
                                    <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@item.Id">
                                        <i class="fa-solid fa-trash"></i> Borrar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No hay registro</p>
            }
        </div>
    </div>
</div>
